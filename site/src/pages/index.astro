---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Code } from 'astro:components';
---

<BaseLayout title="Aero Slider ‚Äî Lightweight CSS-first Slider">
  <!-- ‚îÄ‚îÄ‚îÄ Navbar ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
  <nav class="relative z-50 bg-transparent">
    <div
      class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-4 px-4 py-4 sm:flex-row sm:px-6 sm:py-6"
    >
      <a href="/" class="text-xl font-bold tracking-tight text-slate-900">Aero Slider</a>
      <div
        class="flex flex-wrap items-center justify-center gap-4 text-sm font-medium text-slate-600 sm:gap-6"
      >
        <a href="#examples" class="transition hover:text-slate-900">Examples</a>
        <a href="#api" class="transition hover:text-slate-900">API</a>
        <a
          href="https://github.com/Negative-Space-Dev/aero-slider"
          target="_blank"
          rel="noopener"
          class="text-slate-400 transition hover:text-slate-900"
          aria-label="GitHub"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"
            ><path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.654-1.093 2.75-1.026 2.75-1.026.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path></svg
          >
        </a>
      </div>
    </div>
  </nav>

  <main class="mx-auto max-w-6xl px-4 py-8 sm:px-6 sm:py-12">
    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         HERO ‚Äî Interactive Playground
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section class="mb-12 sm:mb-20">
      <div class="mb-8 mt-4 sm:mb-12 sm:mt-8 text-center">
        <div class="mb-6 flex flex-wrap items-center justify-center gap-3">
          <span
            class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs font-medium text-slate-600"
          >
            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
            v1.0.0 is now available
          </span>
          <span
            class="inline-flex items-center gap-1.5 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs font-medium text-slate-600"
          >
            <svg
              class="h-4 w-4 text-indigo-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            ~6KB minzipped
          </span>
        </div>
        <h1
          class="text-4xl font-extrabold tracking-tight text-[#0f172a] sm:text-5xl md:text-6xl/tight text-pretty max-w-2xl mx-auto"
        >
          CSS-first slider for the modern web.
        </h1>
        <p class="mx-auto mt-4 sm:mt-6 max-w-2xl text-base sm:text-lg text-slate-500">
          A lightweight, performant, and accessible slider library. Built with modern CSS features.
          Drag, loop, autoplay, and configure with ease. Zero dependencies.
        </p>
        <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
          <a
            href="#getting-started"
            class="inline-flex items-center justify-center rounded-lg bg-[#0f172a] px-6 py-3 text-sm font-medium text-white shadow-sm transition hover:bg-slate-800"
            >Get Started</a
          >
          <a
            href="#examples"
            class="inline-flex items-center justify-center rounded-lg border border-slate-200 bg-white px-6 py-3 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50"
            >View Examples</a
          >
        </div>
      </div>

      <!-- Features callout -->
      <div class="mb-8 grid gap-4 sm:grid-cols-3">
        <div class="rounded-xl border border-slate-200 bg-white p-5">
          <div class="mb-2 text-slate-400">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
              ></path></svg
            >
          </div>
          <h3 class="font-semibold text-slate-900">CSS-First</h3>
          <p class="mt-1 text-sm text-slate-600">
            Layout driven by custom properties. Style with standard CSS‚Äîno inline styles or
            JS-driven dimensions.
          </p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-5">
          <div class="mb-2 text-slate-400">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg
            >
          </div>
          <h3 class="font-semibold text-slate-900">Lightweight</h3>
          <p class="mt-1 text-sm text-slate-600">
            JS + CSS combined ~6KB minzipped. Ideal for performance-critical projects.
          </p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-5">
          <div class="mb-2 text-slate-400">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
              ></path><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
            >
          </div>
          <h3 class="font-semibold text-slate-900">Extensible</h3>
          <p class="mt-1 text-sm text-slate-600">
            Hook into events, sync multiple sliders, or extend with your own navigation and
            controls.
          </p>
        </div>
      </div>

      <div class="grid gap-8 lg:grid-cols-[1fr_320px]">
        <!-- Slider Column -->
        <div class="min-w-0">
          <!-- Main Hero Slider -->
          <div id="hero-slider" class="aero-slider">
            <div class="aero-slider__viewport rounded-2xl">
              <div class="aero-slider__track">
                <div class="bg-linear-to-br from-indigo-500 to-purple-600 text-white rounded-2xl">
                  <div class="flex flex-col items-center justify-center gap-2 p-8 text-center">
                    <span class="text-5xl font-bold">1</span>
                    <span class="text-sm font-medium opacity-75">Slide One</span>
                  </div>
                </div>
                <div class="bg-linear-to-br from-cyan-500 to-blue-600 text-white rounded-2xl">
                  <div class="flex flex-col items-center justify-center gap-2 p-8 text-center">
                    <span class="text-5xl font-bold">2</span>
                    <span class="text-sm font-medium opacity-75">Slide Two</span>
                  </div>
                </div>
                <div class="bg-linear-to-br from-emerald-500 to-teal-600 text-white rounded-2xl">
                  <div class="flex flex-col items-center justify-center gap-2 p-8 text-center">
                    <span class="text-5xl font-bold">3</span>
                    <span class="text-sm font-medium opacity-75">Slide Three</span>
                  </div>
                </div>
                <div class="bg-linear-to-br from-amber-500 to-orange-600 text-white rounded-2xl">
                  <div class="flex flex-col items-center justify-center gap-2 p-8 text-center">
                    <span class="text-5xl font-bold">4</span>
                    <span class="text-sm font-medium opacity-75">Slide Four</span>
                  </div>
                </div>
                <div class="bg-linear-to-br from-rose-500 to-pink-600 text-white rounded-2xl">
                  <div class="flex flex-col items-center justify-center gap-2 p-8 text-center">
                    <span class="text-5xl font-bold">5</span>
                    <span class="text-sm font-medium opacity-75">Slide Five</span>
                  </div>
                </div>
              </div>
            </div>
            <div class="aero-slider__pagination">
              <span class="aero-slider__dot h-2.5 w-2.5 rounded-full bg-slate-300 transition-all"
              ></span>
            </div>
          </div>

          <!-- Thumbnail Strip -->
          <div id="hero-thumbs-wrapper" hidden class="mt-4">
            <div
              id="hero-thumbs"
              class="aero-slider aero-slider--thumbnails rounded-lg"
              style="--slide-aspect: 16/9; --slides-per-view: 5; --slide-gap: 8px;"
            >
              <div class="aero-slider__viewport">
                <div class="aero-slider__track">
                  <div
                    class="rounded-md bg-linear-to-br from-indigo-500 to-purple-600 text-white"
                  >
                    <div class="flex items-center justify-center text-xs font-bold">1</div>
                  </div>
                  <div class="rounded-md bg-linear-to-br from-cyan-500 to-blue-600 text-white">
                    <div class="flex items-center justify-center text-xs font-bold">2</div>
                  </div>
                  <div class="rounded-md bg-linear-to-br from-emerald-500 to-teal-600 text-white">
                    <div class="flex items-center justify-center text-xs font-bold">3</div>
                  </div>
                  <div class="rounded-md bg-linear-to-br from-amber-500 to-orange-600 text-white">
                    <div class="flex items-center justify-center text-xs font-bold">4</div>
                  </div>
                  <div class="rounded-md bg-linear-to-br from-rose-500 to-pink-600 text-white">
                    <div class="flex items-center justify-center text-xs font-bold">5</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Event Log -->
          <div class="mt-6 rounded-xl border border-slate-200 bg-white">
            <h3 class="border-b border-slate-200 px-4 py-3 text-sm font-semibold text-slate-900">
              Event Log
            </h3>
            <div class="max-h-48 overflow-auto">
              <table class="w-full text-sm min-w-[300px]">
                <thead>
                  <tr class="border-b border-slate-100 text-left text-xs text-slate-400">
                    <th class="px-4 py-2 font-medium">Event</th>
                    <th class="px-4 py-2 font-medium">Data</th>
                    <th class="px-4 py-2 font-medium">Time</th>
                  </tr>
                </thead>
                <tbody id="event-log"></tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Config Panel -->
        <aside class="rounded-xl border border-slate-200 bg-white p-5">
          <h2 class="mb-4 text-sm font-bold uppercase tracking-wider text-slate-500">
            Configuration
          </h2>
          <form id="config-form" class="space-y-5">
            <!-- Number of Slides -->
            <div>
              <div class="mb-1 flex items-center justify-between text-sm">
                <label for="slideCount" class="font-medium text-slate-700">Number of Slides</label>
                <output id="out-slideCount" class="tabular-nums text-slate-500">5</output>
              </div>
              <input
                id="slideCount"
                type="range"
                name="slideCount"
                min="3"
                max="20"
                step="1"
                value="5"
                class="w-full accent-slate-800"
              />
            </div>

            <!-- Slides Per View -->
            <div>
              <div class="mb-1 flex items-center justify-between text-sm">
                <label for="spv" class="font-medium text-slate-700">Slides per View</label>
                <output id="out-spv" class="tabular-nums text-slate-500">1</output>
              </div>
              <input
                id="spv"
                type="range"
                name="slidesPerView"
                min="1"
                max="4"
                step="0.25"
                value="1"
                class="w-full accent-slate-800"
              />
            </div>

            <!-- Gap -->
            <div>
              <div class="mb-1 flex items-center justify-between text-sm">
                <label for="gap" class="font-medium text-slate-700">Gap (px)</label>
                <output id="out-gap" class="tabular-nums text-slate-500">10</output>
              </div>
              <input
                id="gap"
                type="range"
                name="gap"
                min="0"
                max="32"
                step="2"
                value="10"
                class="w-full accent-slate-800"
              />
            </div>

            <!-- Autoplay Interval -->
            <div>
              <div class="mb-1 flex items-center justify-between text-sm">
                <label for="interval" class="font-medium text-slate-700">Autoplay Interval</label>
                <output id="out-interval" class="tabular-nums text-slate-500">4000</output>
              </div>
              <input
                id="interval"
                type="range"
                name="autoplayInterval"
                min="1000"
                max="8000"
                step="500"
                value="4000"
                class="w-full accent-slate-800"
              />
            </div>

            <hr class="border-slate-200" />

            <!-- Toggles -->
            <fieldset class="space-y-3">
              <legend class="sr-only">Feature toggles</legend>
              <label class="flex items-center gap-3 text-sm">
                <input type="checkbox" name="loop" class="h-4 w-4 accent-slate-800" />
                <span class="text-slate-700">Loop</span>
              </label>
              <label class="flex items-center gap-3 text-sm">
                <input type="checkbox" name="pagination" checked class="h-4 w-4 accent-slate-800" />
                <span class="text-slate-700">Pagination</span>
              </label>
              <label class="flex items-center gap-3 text-sm">
                <input type="checkbox" name="navigation" checked class="h-4 w-4 accent-slate-800" />
                <span class="text-slate-700">Navigation Arrows</span>
              </label>
              <label class="flex items-center gap-3 text-sm">
                <input type="checkbox" name="draggable" checked class="h-4 w-4 accent-slate-800" />
                <span class="text-slate-700">Draggable</span>
              </label>
              <label class="flex items-center gap-3 text-sm">
                <input type="checkbox" name="autoplay" class="h-4 w-4 accent-slate-800" />
                <span class="text-slate-700">Autoplay</span>
              </label>
              <label class="flex items-center gap-3 text-sm">
                <input type="checkbox" name="thumbnails" class="h-4 w-4 accent-slate-800" />
                <span class="text-slate-700">Thumbnails</span>
              </label>
            </fieldset>
          </form>
        </aside>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         EXAMPLES
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="examples" class="mb-12 sm:mb-20 space-y-10 sm:space-y-16">
      <h2 class="text-2xl font-bold text-slate-900">Examples</h2>

      <!-- Multi-slide -->
      <div>
        <h3 class="mb-1 text-lg font-semibold text-slate-800">Multi-Slide View</h3>
        <p class="mb-4 text-sm text-slate-500">Show multiple slides at once with gap spacing.</p>
        <div id="multi" class="aero-slider" style="--slides-per-view: 2.25; --slide-gap: 16px;">
          <div class="aero-slider__viewport">
            <div class="aero-slider__track">
              <div class="rounded-lg bg-linear-to-br from-violet-400 to-fuchsia-500 text-white">
                <div class="flex items-center justify-center text-3xl font-bold">A</div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-sky-400 to-indigo-500 text-white">
                <div class="flex items-center justify-center text-3xl font-bold">B</div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-lime-400 to-green-500 text-white">
                <div class="flex items-center justify-center text-3xl font-bold">C</div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-yellow-400 to-amber-500 text-white">
                <div class="flex items-center justify-center text-3xl font-bold">D</div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-red-400 to-rose-500 text-white">
                <div class="flex items-center justify-center text-3xl font-bold">E</div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-teal-400 to-cyan-500 text-white">
                <div class="flex items-center justify-center text-3xl font-bold">F</div>
              </div>
            </div>
          </div>
          <div class="aero-slider__pagination">
            <span class="aero-slider__dot h-2.5 w-2.5 rounded-full bg-slate-300 transition-all"
            ></span>
          </div>
        </div>
      </div>

      <!-- Responsive (media queries) -->
      <div>
        <h3 class="mb-1 text-lg font-semibold text-slate-800">Responsive with Media Queries</h3>
        <p class="mb-4 text-sm text-slate-500">
          Layout adapts to viewport: 1 slide on mobile, 2 on tablet, 3 on desktop. Resize the
          window to see the slider re-read
          <code class="rounded bg-slate-100 px-1 py-0.5 font-mono text-xs"
            >--slides-per-view</code
          >
          from CSS.
        </p>
        <div id="responsive" class="aero-slider aero-slider--responsive">
          <div class="aero-slider__viewport rounded-xl">
            <div class="aero-slider__track">
              <div class="rounded-lg bg-linear-to-br from-slate-600 to-slate-800 text-white">
                <div class="flex flex-col items-center justify-center gap-1 p-6 text-center">
                  <span class="text-2xl font-bold">1</span>
                  <span class="text-xs opacity-75">Mobile</span>
                </div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-indigo-600 to-indigo-800 text-white">
                <div class="flex flex-col items-center justify-center gap-1 p-6 text-center">
                  <span class="text-2xl font-bold">2</span>
                  <span class="text-xs opacity-75">Tablet</span>
                </div>
              </div>
              <div class="rounded-lg bg-linear-to-br from-violet-600 to-violet-800 text-white">
                <div class="flex flex-col items-center justify-center gap-1 p-6 text-center">
                  <span class="text-2xl font-bold">3</span>
                  <span class="text-xs opacity-75">Desktop</span>
                </div>
              </div>
